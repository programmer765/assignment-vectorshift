backend/**/*.pyo
backend/**/*.pyd

# Build directories
backend/build/
backend/dist/
backend/*.egg-info/
backend/.pytest_cache/
backend/.mypy_cache/
backend/.coverage
backend/htmlcov/
backend/.tox/
backend/.cache/

# SQLite databases or similar local data
backend/*.sqlite3
backend/*.db

# IDE/editor settings
backend/.idea/
backend/.vscode/

